<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bubblecloud.codegen.mapper.TableFieldMapper">

	<select id="findTableFieldListByTableName" resultType="com.bubblecloud.codegen.entity.TableField">
		show
		fields  FROM  `${dbName}`.
		${tableName_pre}
		${className}
	</select>

	<select id="findTableComment" resultType="java.lang.String">
		SELECT table_comment tableComment
		FROM information_schema.tables
		WHERE table_schema = #{dbName}
		  AND table_name = concat('', #{tableName_pre}, #{className})
	</select>

</mapper>
